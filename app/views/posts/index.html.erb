<h1>Posts</h1>

<%= link_to 'New post', new_post_path %>

<table class="articles_table">
  <tr>
    <th>Name</th>
    <th></th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.name if post.present? %></td>
      <td><%= link_to 'Destroy', post_path(post),
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<p>
  <%= render partial: 'top_five_posts' %>
</p>
<p>
  <%= link_to "Title page", root_path, class: "back_to_main" %>
</p>