<% if @product.present? %>
  <p>
    <strong>name:</strong>
    <%= @product.name %>
  </p>

  <p>
    <strong>description:</strong>
    <%= @product.description %>
  </p>

  <p>
    <%= link_to 'Edit', edit_product_path(@product) %>
    <%= link_to 'Back', products_path, class: 'back_button' %>
  </p>

<% end %>