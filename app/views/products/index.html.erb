<h1>Products</h1>

<%= link_to 'New product', new_product_path %>

<table class="articles_table">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th></th>
  </tr>

  <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.description %></td>
      <td><%= link_to 'Show', product_path(product) %></td>
      <td><%= link_to 'Edit', edit_product_path(product) %></td>
      <td><%= link_to 'Destroy', product_path(product),
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %></td>
      <td><%= link_to 'Download_pdf', download_pdf_path(product) %></td>
    </tr>
  <% end %>
</table>

<p>
  <%= link_to "Title page", root_path, class: "back_to_main" %>
</p>